<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/main_color">

        <RelativeLayout
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true">

            <ImageView
                android:id="@+id/img_notice"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:padding="10dp"
                android:src="@drawable/home_page_notice_icon_unchecked" />


            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true">

                <TextView
                    android:id="@+id/tv_ns"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:layout_marginRight="12dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/home_page_red_icon"
                    android:gravity="center"
                    android:text="12"
                    android:textColor="@color/white"
                    android:textSize="5sp"
                    android:visibility="gone" />

            </FrameLayout>
        </RelativeLayout>


        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="38dp"
            android:layout_centerInParent="true"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_myc"
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:layout_weight="1"
                android:textColor="@color/white"
                android:textSize="15sp"
                android:text="@string/dialogue"
                android:gravity="center"
                android:background="@drawable/blue_left_bg"/>


            <TextView
                android:id="@+id/tv_sc"
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:layout_weight="1"
                android:textColor="@color/main_color"
                android:textSize="15sp"
                android:text="@string/contact"
                android:gravity="center"
                android:background="@drawable/white_right_bg"/>
        </LinearLayout>

        <ImageView
            android:id="@+id/img_add"
            android:layout_width="25dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dp"
            android:src="@drawable/add_w" />
    </RelativeLayout>


    <com.kloudsync.techexcel.view.CustomViewPager
        android:id="@+id/vp_contact"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </com.kloudsync.techexcel.view.CustomViewPager>

</LinearLayout>