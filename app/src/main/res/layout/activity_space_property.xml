<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="@color/main_color">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Space Property"
            android:textColor="#fff"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/addService"
            android:layout_width="25dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dp"
            android:visibility="gone"
            android:src="@drawable/morewhite" />

        <RelativeLayout
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true">

            <ImageView
                android:id="@+id/img_notice"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:padding="10dp"
                android:src="@drawable/return_arrow" />
        </RelativeLayout>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/teamrl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@color/lightgrey"
        android:paddingBottom="5dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="5dp">


        <TextView
            android:id="@+id/tv_fs"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:textColor="@color/white"
            android:gravity="center"
            android:background="@drawable/circle_expand"/>

        <TextView
            android:id="@+id/teamspacename"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/tv_fs"
            android:text="Medical team of Beijing hospital"
            android:textColor="@color/black" />

    </RelativeLayout>


    <TextView
        android:id="@+id/tv_invite"
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:layout_centerVertical="true"
        android:drawablePadding="10dp"
        android:drawableLeft="@drawable/blue_circle"
        android:gravity="center_vertical"
        android:layout_marginLeft="10dp"
        android:text="Invate new"
        android:textColor="@color/skyblue" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycleview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="2dp"></android.support.v7.widget.RecyclerView>


</LinearLayout>