<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/rl_update"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/lightblack"
        android:visibility="gone">

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:indeterminateDrawable="@drawable/progress_color" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@color/white"
        android:orientation="vertical">


        <com.kloudsync.techexcel.view.CustomViewPager
            android:id="@+id/vp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

        </com.kloudsync.techexcel.view.CustomViewPager>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/lightgrey" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_service"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:drawablePadding="2dp"
                android:drawableTop="@drawable/tab_d_02"
                android:gravity="center"
                android:padding="3dp"
                android:text="@string/service"
                android:textColor="@color/darkgrey"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_dialogue"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:drawablePadding="2dp"
                android:drawableTop="@drawable/tab_d_01"
                android:gravity="center"
                android:padding="3dp"
                android:text="@string/dialogue"
                android:textColor="@color/darkgrey"
                android:textSize="12sp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/tv_contact"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:drawablePadding="2dp"
                    android:drawableTop="@drawable/tab_d_03"
                    android:gravity="center"
                    android:padding="3dp"
                    android:text="@string/contact"
                    android:textColor="@color/darkgrey"
                    android:textSize="12sp" />

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true">

                    <TextView
                        android:id="@+id/tv_redcontact"
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:layout_margin="3dp"
                        android:background="@drawable/home_page_red_icon"
                        android:gravity="center"
                        android:visibility="gone"
                        android:textColor="@color/white"
                        android:textSize="5sp" />

                </FrameLayout>
            </RelativeLayout>

            <TextView
                android:id="@+id/tv_community"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:drawablePadding="2dp"
                android:drawableTop="@drawable/tab_d_04"
                android:gravity="center"
                android:padding="3dp"
                android:text="@string/community"
                android:textColor="@color/darkgrey"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_personal_center"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:drawablePadding="2dp"
                android:drawableTop="@drawable/tab_d_05"
                android:gravity="center"
                android:padding="3dp"
                android:text="@string/personal_center"
                android:textColor="@color/darkgrey"
                android:textSize="12sp" />


        </LinearLayout>

    </LinearLayout>
</RelativeLayout>
